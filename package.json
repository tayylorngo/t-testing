{
  "name": "t-testing",
  "version": "1.0.0",
  "description": "T-Testing School Management System",
  "private": true,
  "main": "server/server.js",
  "scripts": {
    "build": "cd client && npm ci && npm run build && mkdir -p ../server/public && cp -r dist/* ../server/public/",
    "start": "node server/server.js",
    "install:client": "cd client && npm ci",
    "install:server": "cd server && npm ci --production",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1"
  }
}
